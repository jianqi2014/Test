include $(MAKE_INCLUDE_GEN)

.PHONY: all clean

#*****************************************************************************#
#                               Source FILE LIST                              #
#*****************************************************************************#
SOURCES = btltp_FreeRTOS.c btltpcom.c btltpltp.c btltptgt_FreeRTOS.c btltputl.c ltp_service.c ltplib.c ltp_gdma.c aci_low_power.c aci_low_power_utils.c

sinclude $(SOURCES:.c=.d)

#*****************************************************************************#
#                               Object FILE LIST                              #
#*****************************************************************************#
OBJS = $(SOURCES:%.c=%.o) 

#*****************************************************************************#
#                        RULES TO GENERATE TARGETS                            #
#*****************************************************************************#

# Define the Rules to build the core targets
all: CORE_TARGETS COPY_ROM_OBJS
	
#*****************************************************************************#
#              GENERATE OBJECT FILE 
#*****************************************************************************#

CORE_TARGETS:	$(OBJS)

#*****************************************************************************#
#                 CLEAN INTERMEDIATE FILES 
#*****************************************************************************#
clean: CLEAN_OBJS
